<%- include('./partials/header.ejs') %>
    <div class="index-container">
    <h1>To buy:</h1>

    <ul class="index-item-list">
      <% for(let i = 0; i < items.length; i++) {
      %>
        <li class="index-item">
          &nbsp;
          <form action="/items/<%=items[i].id%>?_method=DELETE" method="POST">
                <input class="checkbox" type="submit" value="✔️" />  
          </form>
          &nbsp;
          <h2><a href="/items/<%= items[i].id %>" class="index-item-text"> <%= items[i].name %> </a></h2>
        </li>
        <hr>
      <% } %>
    </ul>

    <form class="index-add-form" method="POST" action="/items">
          <label for="name">Add item:&nbsp;</label>
          <input type="text" name="name" placeholder="Enter item name here">
          <button class="plus-btn" ><b>+</b></button>
    </form>
    </div>
    </body>
</html>